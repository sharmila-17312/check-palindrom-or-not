      "source": [
        "def is_palindrome(text):\n",
        "    text = text.replace(\" \", \"\").lower()  # Ignore spaces and case\n",
        "    return text == text[::-1]\n",
        "\n",
        "text = input(\"Enter a word or phrase: \")\n",
        "\n",
        "if is_palindrome(text):\n",
        "    print(\"It's a palindrome!\")\n",
        "else:\n",
        "    print(\"It's not a palindrome.\")\n"
      ],
